<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center">
    <h1>Khóa học đã xóa</h1>
    <a href="/me/stored/courses">Danh sách khóa học</a>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Tên Khóa Họ</th>
        <th scope="col">Trình Độ</th>
        <th scope="col" colspan="3">Thời Gian Tạo</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <th scope="row">{{count @index}}</th>
          <td>{{this.name}}</td>
          <td>{{this.lever}}</td>
          <td>{{formatDate this.createdAt}}</td>
          <td><a
              href=""
              name="restore"
              class="btn btn-link"
              data-id="{{this._id}}"
            >Khôi phục</a></td>
          <td><a
              href="#"
              class="btn btn-link"
              data-bs-toggle="modal"
              data-bs-target="#delete-courses-modal"
              data-id="{{this._id}}"
            >Xóa vĩnh viễn</a></td>
        </tr>
      {{else}}
        <tr>
          <td colspan="5" class="text-center border-bottom-0">Chưa có khóa học
            nào được xóa
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{! submit from delete }}
<form id="from_delete" method="POST">
</form>
<form id="restore" method="POST">
</form>

{{! confirm delete }}
<div id="delete-courses-modal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa Khóa Học?</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>Việc xóa khóa học sẽ không thể khổi phục lại?</p>
      </div>
      <div class="modal-footer">
        <button id="delete" type="button" class="btn btn-danger">Xóa bỏ</button>
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Hủy</button>
      </div>
    </div>
  </div>
</div>

<script>
  var btnRestore = document.getElementsByName('restore'); var restoreFrom =
  document.getElementById('restore'); console.log(restoreFrom)
  btnRestore.forEach(lopEvent); function lopEvent(item) {
  item.addEventListener("click", function(e) { e.preventDefault();
  restoreFrom.action = '/courses/' + item.getAttribute("data-id") +
  '/restore?_method=PATCH'; restoreFrom.submit();
  console.log(item.getAttribute("data-id") ) })} ; var coursesID; var
  delete_modal = document.getElementById('delete-courses-modal'); var
  submit_from_delete = document.getElementById('from_delete'); var btn_delete =
  document.getElementById('delete'); btn_delete.onclick = function() {
  submit_from_delete.action = '/courses/' + coursesID +
  '/forceDelete?_method=DELETE'; submit_from_delete.submit(); };
  delete_modal.addEventListener('show.bs.modal', function (event) { var button =
  event.relatedTarget; coursesID = button.getAttribute('data-id'); })
</script>