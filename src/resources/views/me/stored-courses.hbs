<form class="container mt-4" method="POST" action="/courses/handle-from-action">
  <div class="d-flex justify-content-between align-items-center">
    <h1>Update Course</h1>
    <a
      href="/me/trash/courses"
      class="d-inline-block text-decoration-none text-dark"
    >
      <p>
        <i class="fa-solid fa-trash"></i>
        Thùng rác ({{countCoursesDeleted}})
      </p>
    </a>
  </div>
  <div class="mt-4 mb-4 d-flex align-items-center">
    <div class="form-check">
      <input
        class="form-check-input"
        type="checkbox"
        value=""
        id="checkbox-all"
      />
      <label class="form-check-label" for="checkbox-all">
        Chọn tất cả
      </label>
    </div>
    <select
      class="form-select"
      aria-label="Default select example"
      name="action"
      required
    >
      <option value="">-- Hãy chọn --</option>
      <option value="delete">Xóa</option>
    </select>
    <button
      type="submit"
      class="btn btn-primary submit-checkbox"
      disabled="disabled"
    >Thực hiện</button>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th scope="col">#</th>
        <th scope="col">Tên Khóa Học
          {{{sortable "name" _sort}}}
        </th>
        <th scope="col">Trình Độ
          {{{sortable "lever" _sort}}}

        </th>
        <th scope="col" colspan="4">Thời Gian Tạo
          {{{sortable "createAt" _sort}}}

        </th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <th>
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                name="courseIds[]"
                value="{{this._id}}"
              />
            </div></th>
          <th scope="row">{{count @index}}</th>
          <td>{{this.name}}</td>
          <td>{{this.lever}}</td>
          <td>{{formatDate this.createdAt}}</td>
          <td><a
              href="/courses/{{this._id}}/edit"
              class="btn btn-link"
            >Sửa</a></td>
          <td><a
              href="#"
              class="btn btn-link"
              data-bs-toggle="modal"
              data-bs-target="#delete-courses-modal"
              data-id="{{this._id}}"
            >Xóa</a></td>
        </tr>
      {{else}}
        <tr>
          <td colspan="5" class="text-center border-bottom-0">Bạn chưa đăng khóa
            học nào .
            <a href="/courses/create">Đăng khóa học</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</form>

{{! submit from delete }}
<form id="from_delete" method="POST">
</form>

{{! confirm delete }}
<div id="delete-courses-modal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa Khó Học?</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>Bạn muốn chắc chắc muốn xóa khóa học này?</p>
      </div>
      <div class="modal-footer">
        <button id="delete" type="button" class="btn btn-danger">Xóa bỏ</button>
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Hủy</button>
      </div>
    </div>
  </div>
</div>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script>
  var submitCheckBox = $(".submit-checkbox"); var coursesID; var delete_modal =
  document.getElementById('delete-courses-modal'); var submit_from_delete =
  document.getElementById('from_delete'); var btn_delete =
  document.getElementById('delete'); btn_delete.onclick = function() {
  submit_from_delete.action = '/courses/' + coursesID + '?_method=DELETE';
  submit_from_delete.submit(); }; delete_modal.addEventListener('show.bs.modal',
  function (event) { var button = event.relatedTarget; coursesID =
  button.getAttribute('data-id'); }); var checkboxAll = $('#checkbox-all'); var
  courseItemCheckbox = $('input[name="courseIds[]"]');
  console.log(courseItemCheckbox); checkboxAll.change(function() { var
  isCheckedAll = $(this).prop('checked'); courseItemCheckbox.prop('checked',
  isCheckedAll); renderCheckAllSubmitBtn()});
  courseItemCheckbox.change(function() { var isCheckedAll =
  courseItemCheckbox.length === $('input[name="courseIds[]"]:checked').length;
  checkboxAll.prop('checked', isCheckedAll); console.log(isCheckedAll);
  renderCheckAllSubmitBtn() }); function renderCheckAllSubmitBtn() { var
  checkedCount = $('input[name="courseIds[]"]:checked').length; if(checkedCount)
  { submitCheckBox.attr('disabled',false) } else {
  submitCheckBox.attr('disabled',true) };}
</script>